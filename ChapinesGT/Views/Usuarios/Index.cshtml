@model IEnumerable<ChapinesGT.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<br>
<br>
<br>
<br>
<h1>Usuarios</h1>

<p>
    <a class="btn btn-secondary btn-sm" asp-action="Create">Crear Nuevo <i class="icon ion-md-add-circle"></i></a>
</p>
<table class="w3-table w3-striped w3-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha_nacimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contrasenia)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_nacimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contrasenia)
            </td>
            <td>
                <a class="btn btn-warning btn-sm"asp-action="Edit" asp-route-id="@item.Id">Editar<i class="icon ion-md-brush"></i></a> 
                <a class="btn btn-primary btn-sm"asp-action="Details" asp-route-id="@item.Id">Detalles<i class="icon ion-md-book"></i></a> 
                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Eliminar<i class="icon ion-md-close-circle"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>