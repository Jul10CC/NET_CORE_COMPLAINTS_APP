@model IEnumerable<ChapinesGT.Models.Sucursal>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<br>
<br>
<br>
<br>
<h1>Sucursales</h1>

<p>
     <a class="btn btn-secondary btn-sm" asp-action="Create">Crear Nuevo <i class="icon ion-md-add-circle"></i></a>
</p>
<table class="w3-table w3-striped w3-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comercio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Municipio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Region)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comercio.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departamento.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Municipio.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Region.Nombre)
            </td>
            <td>
                  <a class="btn btn-warning btn-sm"asp-action="Edit" asp-route-id="@item.Id">Editar<i class="icon ion-md-brush"></i></a> 
                <a class="btn btn-primary btn-sm"asp-action="Details" asp-route-id="@item.Id">Detalles<i class="icon ion-md-book"></i></a> 
                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Eliminar<i class="icon ion-md-close-circle"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>